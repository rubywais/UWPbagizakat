<Page
    x:Class="BagiWaris.AyahAda"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BagiWaris"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF40C5CB">
        <StackPanel Margin="10">
            <TextBlock x:ConnectionId='3' Name="labelTitleTotalHarta">Masukkan Jumlah Harta Peninggalan Ibu</TextBlock>
            <TextBox x:ConnectionId='4' Name="labelTotalHartaAyah" PlaceholderText="Rp."/>
            <Button x:ConnectionId='5' Name="buttonHitungAyah"                                Margin="0,30,0,0">Hitung</Button>
            <TextBlock x:ConnectionId='6' Name="totalAyah" Margin="0,20,0,0" TextWrapping="Wrap"/>
        </StackPanel>

        <Page x:ConnectionId='1'                     >
            <Page.BottomAppBar>
                <AppBar>
                    <AppBarButton x:ConnectionId='2' Icon="Back"                           />
                </AppBar>
            </Page.BottomAppBar>
        </Page>
    </Grid>
</Page>

